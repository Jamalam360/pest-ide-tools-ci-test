{
	"comments": {
		"lineComment": "//",
		"blockComment": ["/*", "*/"]
	},
	"autoClosingPairs": [
		{
			"open": "{",
			"close": "}",
			"notIn": ["string"]
		},
		{
			"open": "[",
			"close": "]",
			"notIn": ["string"]
		},
		{
			"open": "(",
			"close": ")",
			"notIn": ["string"]
		},
		{
			"open": "\"",
			"close": "\"",
			"notIn": ["string"]
		},
		{
			"open": "'",
			"close": "'",
			"notIn": ["string"]
		},
		{
			"open": "/*",
			"close": "*/",
			"notIn": ["string"]
		}
	],
	"autoCloseBefore": ";:.,=}])>` \n\t",
	"surroundingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["\"", "\""],
		["'", "'"]
	],
	"colorizedBracketPairs": [
		["(", ")"],
		["[", "]"],
		["{", "}"]
	],
	"folding": {
		"markers": {
			"start": "^.+\\s=\\s[@_#!]?{\\n",
			"end": "^([^\"][^\\s\\S])*}([^\"][\\s\\S])*"
		},
		"offSide": false
	},
	"indentationRules": {
		"increaseIndentPattern": "^((?!\\/(\\/|\\*)).)*(\\{[^}\"'`]*|\\([^)\"'`]*|\\[[^\\]\"'`]*)$",
		"decreaseIndentPattern": "^((?!.*?\\/\\*).*\\*/)?\\s*[\\)\\}\\]].*$"
	}
}
